<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.laboratorjavafx.controllers.UserController" spacing="10">
    <TableView fx:id="usersTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="firstNameColumn" text="First Name" />
            <TableColumn fx:id="lastNameColumn" text="Last Name" />
        </columns>
    </TableView>

    <HBox spacing="5">
        <Label text="First Name:" />
        <TextField fx:id="firstNameField" prefWidth="200" />
    </HBox>
    <HBox spacing="5">
        <Label text="Last Name:" />
        <TextField fx:id="lastNameField" prefWidth="200" />
    </HBox>

    <HBox spacing="10">
        <Button text="Add" fx:id="addButton" onAction="#addUser" />
        <Button text="Update" fx:id="updateButton" onAction="#updateUser" />
        <Button text="Delete" fx:id="deleteButton" onAction="#deleteUser" />
    </HBox>
</VBox>
