<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laboratorjavafx.controllers.UserController" spacing="20" prefWidth="800" prefHeight="600" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <TableView fx:id="usersTable" prefWidth="750" style="-fx-background-color: #ffffff; -fx-border-color: #ccc;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="150" />
            <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="200" />
            <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="200" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="250" />
        </columns>
    </TableView>

    <VBox spacing="10" prefWidth="600" style="-fx-alignment: CENTER_RIGHT;">
        <HBox spacing="5" alignment="CENTER_LEFT" style="-fx-alignment: CENTER_LEFT;">
            <Label text="First Name:" />
            <TextField fx:id="firstNameField" prefWidth="200" />
        </HBox>
        <HBox spacing="5" alignment="CENTER_LEFT" style="-fx-alignment: CENTER_LEFT;">
            <Label text="Last Name:" />
            <TextField fx:id="lastNameField" prefWidth="200"/>
        </HBox>
        <HBox spacing="5" alignment="CENTER_LEFT" style="-fx-alignment: CENTER_LEFT;">
            <Label text="Email:        " />
            <TextField fx:id="emailField" prefWidth="200" />
        </HBox>
    </VBox>

    <HBox spacing="20" prefWidth="600" style="-fx-alignment: CENTER_LEFT;">
        <Button text="Add" fx:id="addButton" onAction="#addUser" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" />
        <Button text="Update" fx:id="updateButton" onAction="#updateUser" style="-fx-background-color: #008CBA; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" />
        <Button text="Delete" fx:id="deleteButton" onAction="#deleteUser" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" />
    </HBox>
</VBox>
